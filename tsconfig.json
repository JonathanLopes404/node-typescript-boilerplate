{
  "compilerOptions": {
    "target": "es2021",                                
    "module": "ESNext",                                
    "rootDir": "./src",                                  
    "moduleResolution": "node",                    
    "baseUrl": ".",                                  
    "paths": {
      "@main/*": ["./src/main/*"],
      "@presentation/*": ["src/presentation/*"]
    },
    "allowJs": true,                                  
    "outDir": "./dist",                                   
    "removeComments": true,                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src", "./tests"],
  "exclude": ["node_modules"]
}
